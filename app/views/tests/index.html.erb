<h1 class="mb-3">
  <%= t('.header') %>
</h1>

<div class="table-responsive mt-4">
  <table class="table">
    <thead class="table-info">
    <tr>
      <th scope="col" class="sort-by-title pointer">
        <%= t('.table.title') %>
        <%= octicon 'arrow-up', class: 'text-white hide' %>
        <%= octicon 'arrow-down', class: 'text-white hide' %>
      </th>
      <th scope="col"><%= t('.table.level') %></th>
      <th scope="col"><%= t('.table.questions_count') %></th>
      <th scope="col"><%= t('.table.timer') %></th>
      <th scope="col"><%= t('.table.actions') %></th>
    </tr>
    </thead>

    <tbody>
    <%= render @tests %>
    </tbody>
  </table>
</div>
<%= link_to t('.links.back'), root_path , class: 'btn btn-info' %>
