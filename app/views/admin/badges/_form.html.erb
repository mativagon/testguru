<%= form_with model: [:admin, @badge], local: true do |form| %>

  <div class="form-group">

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :rule, class: 'form-label' %>
      <%= form.select :rule,
                      options_for_select(Badge.rules.map { |k, v| [k.titleize, Badge.rules.key(v)] }, @badge.rule),
                      { prompt: true },
                      class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= form.label :subject_name %>
      <%= form.text_field :subject_name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :image, class: 'form-label' %>
      <%= form.text_field :image, class: 'form-control' %>
    </div>

    <%= form.submit class: 'btn btn-primary' %>

  </div>
<% end %>